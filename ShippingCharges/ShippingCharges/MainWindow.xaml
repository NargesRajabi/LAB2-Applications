<Window x:Class="ShippingCharges.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShippingCharges"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" Width="800">
    <Grid >
        <Label Content="PackageW"
               Width="100" Height="30"
               Margin="0 0 59 100"></Label>
        <TextBox Width="150" Name="txtNumberOne"
                 Height="55"
                 Margin="200 0 0 100"></TextBox>

        <Label Content="Mile"
               Width="100" Height="30"
               Margin="0 150 80 100"></Label>
        
        <TextBox Width="150" Name="txtNumberTwo"
                 Height="55"
                 Margin="200 150 0 100"></TextBox>

        <Button Content="Start . . . "
                Width="150" Height="55"
                Margin="0 200 10 0" Click="Button_Click"></Button>

        <Label Name="lblShow"
               Width="150"
               Height="55"
               Margin="0 350 0 0"></Label>
    </Grid>
</Window>
