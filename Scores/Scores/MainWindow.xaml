<Window x:Class="Scores.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scores"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <TextBox Name="txtNumber1" Width="150" Height="50"></TextBox>
        <TextBox Name="txtNumber2" Width="150" Height="50"></TextBox>
        <TextBox Name="txtNumber3" Width="150" Height="50"></TextBox>
        <Button Width="150" Height="50" Content="Start" Click="Button_Click"></Button>
        <Label x:Name="lblShow" Width="150" Height="50"/>
   
    
    </StackPanel>
</Window>
